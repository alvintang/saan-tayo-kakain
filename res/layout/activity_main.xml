	        </RelativeLayout>
 
	    	<LinearLayout 
	    	    android:id="@+id/row03"
	    	    android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:layout_below="@+id/row02" 
    			android:orientation="vertical"
    			android:gravity="center_horizontal"
    			android:layout_marginTop="10dp">
	        <TextView
	            android:id="@+id/distanceText"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/distanceText"
	            android:textColor="#000000"
	            android:textSize="15sp"
	            android:typeface="monospace" />
	        <Spinner 
	            android:id="@+id/distanceSpinner"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>

	        </LinearLayout>
	        <LinearLayout 
	    	    android:id="@+id/row04"
	    	    android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:layout_below="@+id/row03" 
    			android:orientation="vertical"
    			android:gravity="center_horizontal">
	    	<com.facebook.widget.LoginButton
			    android:id="@+id/loginFB"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"/>
	    	
	    	<ImageButton
			    android:id="@+id/loginTwitter"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:contentDescription="twitterLogin"
			    android:scaleType="centerCrop"
	            android:adjustViewBounds="true"
			    android:maxWidth="100dp"
			    android:maxHeight="40dp"
			    android:background="@null"
			    android:src="@drawable/twitter_login_lowres" />
	    	</LinearLayout>
			<com.google.android.gms.ads.AdView android:id="@+id/adView"
        	android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            ads:adUnitId="ca-app-pub-5603625544367080/9641567252"
            ads:adSize="BANNER"/>
	</RelativeLayout>
</RelativeLayout>